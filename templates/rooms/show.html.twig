                            <div class="item">
                                <figure class="gradient-overlay-hover image-icon">
                                    <a href="{{ vich_uploader_asset(room.mainImage, 'imageFile') }}">
                                        <img src="{{ vich_uploader_asset(room.mainImage, 'imageFile') }}"
                                             class="img-fluid" alt="Image">
                                    </a>
                                </figure>
                            </div>
                            <!-- ITEM -->
                            {% for image in room.secondaryImages %}
                                <div class="item">
                                    <figure class="gradient-overlay-hover image-icon">
                                        <a href="{{ vich_uploader_asset(image, 'imageFile') }}">
                                            <img src="{{ vich_uploader_asset(image, 'imageFile') }}" class="img-fluid"
                                                 alt="Image" width="50" height="50">
                                        </a>
                                    </figure>
                                </div>
                            {% endfor %}
                        </div>
                        <div id="room-thumbs" class="room-thumbs owl-carousel">
