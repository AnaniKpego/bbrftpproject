    <div class="page-title gradient-overlay op5"
         style="background: url({{ asset('/assets/images/room-header.jpg') }}); background-repeat: no-repeat;
                 background-size: cover;">
        <div class="container">
            <div class="inner">
                <h1>{{ room.title }}</h1>
                <div class="d-flex flex-column align-items-end justify-content-end">
                    <div class="room-details-price">
                        {{ room.weekPrice | number_format(0,',',' ') }} / NUIT(SEMAINE)
                    </div>
                    <div class="room-details-price">
                        {{ room.weekendPrice | number_format(0,',',' ') }} / NUIT(WEEKEND)
                    </div>
                </div>
                <ol class="breadcrumb">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('app_bbr_rooms') }}">Rooms</a>
                    </li>
                    <li>{{ room.title }}</li>
                </ol>
            </div>
        </div>
    </div>
