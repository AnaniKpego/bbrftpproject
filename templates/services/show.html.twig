{% extends './layouts/base.html.twig' %}

{% block title %}Bienvenue Ã  Boulay Beach Resort{% endblock %}

{% block body %}

    <!-- ========== MAIN ========== -->
    <main class="post-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-12">
                    <article class="entry">
                        <div class="details">

                            <figure>
                                <img src="{{ vich_uploader_asset(service, 'imageFile') }}" class="img-fluid">
                                <figcaption>Image Caption
                                    <span class="source">
                        <a href="/">
                          <i class="fa fa-link" aria-hidden="true"></i>
                          boulaybeachresort.com</a></span></figcaption>
                            </figure>
                            <div class="text-center d-inline-flex">
                                <h3 class="text-center mr-5">{{ service.title }}</h3>
                                <h3 class="text-center">{{ service.getFormatPrice }}</h3>
                            </div>
                            <blockquote>
                                <p class="quote-text">
                                    {{ service.subtitle|raw|raw }}
                                    {#<a href="#" data-toggle="tooltip" data-placement="top" data-trigger="hover" data-original-title="Marius Doe">Mauris#}
                                    {#</a>#}
                                </p>
                            </blockquote>
                            <p> {{ service.description|raw|raw }}</p>
                        </div>
                    </article>
                    {% include('services/services-tariffs-table.html.twig') %}
                </div>
                <!-- SIDEBAR -->
                <div class="col-lg-3 col-12">
                    <div class="sidebar">
                        <aside class="widget">
                            <h4 class="widget-title">Uniquement sur demande</h4>
                            <ul class="categories">
                                <li>
                                    <a href="#">Travel<span class="posts-num">51</span></a>
                                </li>
                                <li>
                                    <a href="#">Rooms<span class="posts-num">24</span></a>
                                </li>
                                <li>
                                    <a href="#">Holidays
                                        <span class="posts-num">9</span></a>
                                </li>
                                <li>
                                    <a href="#">Travel<span class="posts-num">12</span></a>
                                </li>
                                <li>
                                    <a href="#">Events<span class="posts-num">28</span></a>
                                </li>
                            </ul>
                            <div class="text-center mt-3">
                                <a href="{{ path('app_bbr_service_booking',{'service':service.id}) }}" class="btn-primary btn btn-lg text-center ">Demander</a>
                            </div>

                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- END BLOG LIST -->

{% endblock %}