          <div class="entry">
            <p>
            </p>
            <h4 class="text-uppercase mt40 mb20">MENU DU JOUR</h4>
            <div class="row">
              <!-- ITEM -->
                {% for restaurant in restaurants %}
                  <div class="col-md-6 col-sm-6 col-6">
                    <div class="restaurant-menu-item">
                      <div class="row">
                        <div class="col-lg-4 col-12">
                          <figure>
                            <img src="{{ vich_uploader_asset(restaurant, 'imageFile') }}" class="img-fluid " alt="Image">
                          </figure>
                        </div>
                        <div class="col-lg-8 col-12">
                          <div class="info">
                            <div class="title">
                              <span class="name">{{ restaurant.title }}</span>
                              <span class="price">
                                    <span class="amount">{{ restaurant.price | number_format(0,' ',' ') }} xof</span>
                              </span>
                            </div>
                            <p>{{ restaurant.subtitle |raw|raw}}
                            </p>
                            <p>{{ restaurant.description|raw|raw }}
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                {% endfor %}

                <hr>
