{% extends 'admin/room/base.html.twig' %}
{% block title %}Mise à jours d'une chambre{% endblock %}
{% block page_header_title %}Mise à jours d'une chambre{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        let previews = document.querySelectorAll(".image_preview");
        Array.from(previews).forEach(preview=>{
            let ancestor = preview.closest(".form-group");
            if(ancestor !== null){
                let file = ancestor.querySelector("input[id*='_file']");

                let path = ancestor.querySelector("input[id*='_path']");
                if(path !== null){
                    let img = document.createElement("img");
                    img.src = path.value;
                    preview.appendChild(img);
                }
            }
        });
    </script>
{% endblock %}
