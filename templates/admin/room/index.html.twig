{% extends 'admin/layout/base.html.twig' %}
{% block title %}BBr Administration Chambre{% endblock %}
{% block body %}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-center">Liste des chambres</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="{{ path('app_bbr_admin_room_new') }}" class="btn btn-sm btn-primary float-right">Enregistrer une chambre</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        {#<th>Resumé de la chambre</th>#}
                        {#<th>Description</th>#}
                        <th>Prix en Semaine</th>
                        <th>Prix en weekend</th>
                        <th>Status</th>
                        <th>Image principale</th>
                        <th>Image(s) sécondaire(s)</th>
                        <th>Equipement(s)</th>
                        {#<th>Actions</th>#}
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Titre</th>
                        {#<th>Resumé de la chambre</th>#}
                        {#<th>Description</th>#}
                        <th>Prix en Semaine</th>
                        <th>Prix en weekend</th>
                        <th>Status</th>
                        <th>Image principale</th>
                        <th>Image(s) sécondaire(s)</th>
                        <th>Equipement(s)</th>
                        {#<th>Actions</th>#}
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for room in rooms %}
                        <tr>
                            <td>{{ room.title }}</td>
                            {#<td>{{ room.summary|raw|raw }}</td>#}
                            {#<td>{{ room.description|raw|raw }}</td>#}
                            <td>{{ room.weekPrice }}</td>
                            <td>{{ room.weekendPrice }}</td>
                            <td>{{ room.published }}</td>
                            <td>
                                <a href="{{ vich_uploader_asset(room.mainImage, 'imageFile') }}">
                                    <img src="{{ vich_uploader_asset(room.mainImage, 'imageFile') }}" class="img-fluid" alt="Image" width="80px;" height="80px;">
                                </a>
                            </td>
                            <td>
                                {% for image in room.secondaryImages %}
                                    <a href="{{ vich_uploader_asset(image, 'imageFile') }}">
                                        <img src="{{ vich_uploader_asset(image, 'imageFile') }}" class="img-fluid" alt="Image" width="50" height="50">
                                    </a>
                                {% endfor %}
                            </td>
                            <td>
                                {% for equipment in room.equipments %}
                                    <span><i class="fa fa-{{ equipment.icon }}"></i><em>{{ equipment.name }}</em></span>
                                {% endfor %}
                            </td>
                            {#<td class="d-inline-flex">#}
                                {#<a href="{{ path('room_equipment_show', {'id': room_equipment.id}) }}">show</a>#}
                                {#<a href="{{ path('app_bbr_admin_room_edit', {'room': room.id}) }}" class="btn btn-sm btn-success mx-3">Update</a>#}
                                {#{{ include('admin/room/_delete_form.html.twig') }}#}
                            {#</td>#}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

{% endblock %}