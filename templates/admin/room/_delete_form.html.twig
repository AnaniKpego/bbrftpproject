<form method="post" action="{{ path('app_bbr_admin_room_delete', {'room': room.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet équippement?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
</form>
