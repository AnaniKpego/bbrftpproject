{% extends 'admin/layout/base.html.twig' %}

{% block title %}Administration des events{% endblock %}

{% block body %}
    <div class="container col-md-12 justify-content-center align-items-center">

        <h4 class="text-center"> {{ event.title }} </h4>
        <div class="justify-content-center">
            <div class="card shadow mb-4">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Crée le</th>
                        <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td class="d-inline-block mr-5">{{ event.phone }}
                            <a class="btn-success btn btn-sm float-right" href="tel:+225{{ event.phone }}">
                                <span class="m-3"> <i class="fa fa-phone"></i>Appeler </span>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td class="d-inline-block mr-5">{{ event.email }}
                            <a class="btn-success btn btn-sm float-right" href="mailto:{{ event.email }}">
                                <span class="m-3"> <i class="fa fa-envelope"></i>Envoyer un mail </span>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ event.title }}</td>
                    </tr>
                    <tr>
                        <th>Résumé</th>
                        <td>{{ event.subtitle|raw|raw }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td class="img-fluid" style="height: 100px; width: auto">{{ vich_uploader_asset(event, 'imageFile') }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ event.description|raw|raw }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex mb-4 ml-2">
                    <a class="btn-sm btn btn-primary mr-5" href="{{ path('app_bbr_admin_event') }}">Retour à la liste</a>

                    {{ include('admin/event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
