
{% extends 'admin/layout/base.html.twig' %}

{% block title %}Administration des Slides layers{% endblock %}

{% block body %}
    <div class="container col-md-12 justify-content-center align-items-center">

        <h1 class="text-center">Liste des slide layers</h1>
        <div class="justify-content-center">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    {#<h6 class="m-0 font-weight-bold text-primary">Cette table contient tous les Menu enregistrés</h6>#}
                    <a href="{{ path('app_bbr_admin_slidelayer_new') }}" class="btn btn-sm btn-primary float-right">Enregistrer un menu</a>

                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Class</th>
                                <th>DataX</th>
                                <th>DataHoffset</th>
                                <th>DataY</th>
                                <th>DataVoffset</th>
                                <th>DataResponsiveOffset</th>
                                <th>DataWhitespace</th>
                                <th>Crée le</th>
                                <th>Edité le</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Titre</th>
                                <th>Class</th>
                                <th>DataX</th>
                                <th>DataHoffset</th>
                                <th>DataY</th>
                                <th>DataVoffset</th>
                                <th>DataResponsiveOffset</th>
                                <th>DataWhitespace</th>
                                <th>Crée le</th>
                                <th>Edité le</th>
                                <th>actions</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for slidelayer in slidelayers %}
                                <tr>
                                    <td>{{ slidelayer.title }}</td>
                                    <td>{{ slidelayer.class }}</td>
                                    <td>{{ slidelayer.dataX }}</td>
                                    <td>{{ slidelayer.dataHoffset }}</td>
                                    <td>{{ slidelayer.dataY }}</td>
                                    <td>{{ slidelayer.dataVoffset }}</td>
                                    <td>{{ slidelayer.dataResponsiveOffset }}</td>
                                    <td>{{ slidelayer.dataWhitespace }}</td>
                                    <td>{{ slidelayer.createdAt ? slidelayer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ slidelayer.updatedAt ? slidelayer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td class="d-inline-flex">
                                        {#<a href="{{ path('app_bbr_admin_slidelayer_show', {'id': slidelayer.id}) }}">show</a>#}
                                        <a class="btn btn-primary btn-sm mr-3" href="{{ path('app_bbr_admin_slidelayer_edit', {'id': slidelayer.id}) }}">edit</a>
                                        {% include('admin/slidelayer/_delete_form.html.twig') %}

                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

