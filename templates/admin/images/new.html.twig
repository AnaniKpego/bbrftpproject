{% extends 'admin/layout/base.html.twig' %}
{% block title %}{{ parent()}} Accueil{% endblock %}
{% block body %}
    <div class="container col-md-10 justify-content-center align-items-center">
        <div class="card shadow mb-4">
            <div class="card-body">
                <h1 class="text-center">Enregistrer une image</h1>
                <div class="justify-content-center">
                    {{ include('admin/images/_form.html.twig') }}

                    <a href="{{ path('app_bbr_admin_image_index') }}" class="float-lg-right btn-sm btn-primary">Retour</a>
                    <p class="preview"></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        let input = document.querySelector('.vich-image input');
        let imageTitle = document.querySelector("#image_title");
        input.addEventListener("change",e=>{
            imageTitle.value = input.files[0].name;
        }, false)
    </script>
{% endblock %}
