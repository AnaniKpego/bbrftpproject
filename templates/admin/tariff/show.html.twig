{% extends 'base.html.twig' %}

{% block title %}Tariff{% endblock %}

{% block body %}
    <h1>Tariff</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tariff.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ tariff.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ tariff.price }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ tariff.detail }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tariff.createdAt ? tariff.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ tariff.updatedAt ? tariff.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tariff_index') }}">back to list</a>

    <a href="{{ path('tariff_edit', {'id': tariff.id}) }}">edit</a>

