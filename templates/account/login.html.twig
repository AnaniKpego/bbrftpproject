{% extends './layouts/base.html.twig' %}

{% block title %}BBR login{% endblock %}

{% block body %}
    <!-- ========== MAIN ========== -->
    <main class="contact-page">
        <div class="container">
            <div class="row align-content-lg-center justify-content-center">
                <div class="col-md-5 align-self-center">
                    <div class="section-title">
                        <h5 class="text-center">CONNEXION A VOTRE COMPTE</h5>
                    </div>
                    <form action="{{ path('app_bbr_account_login') }}" method="post" class="contact-form">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group align-content-lg-center">
                                    <input class="form-control" name="_username" placeholder="usename" value="{{ username }}" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group align-content-lg-center">
                                    <input class="form-control" name="_password" placeholder="password" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group align-content-lg-center">
                                    <button type="submit" class="btn mt30">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

{% endblock %}